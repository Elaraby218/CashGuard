<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup Page</title>
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #222024; /* Bright black background */
            overflow: hidden; /* Ensure no scrolling */
        }

        #particles-js {
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            background-color: #222024; /* Bright black background */
            background-size: cover; /* Make background cover entire page */
            background-position: 50% 50%; /* Center background */
            background-repeat: no-repeat; /* Prevent background from repeating */
        }

        .signup-container {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 600px; /* Adjust the width as per your preference */
            padding: 40px;
            background: rgba(300, 300, 300, 0.2);
            border-radius: 20px;
            box-shadow: 0 50px 75px rgba(0, 0, 0, 0.5);
            text-align: center;
        }

            .signup-container h2 {
                margin: 0 0 20px;
                padding-bottom: 10px;
                color: #fff;
            }

        .input-box {
            position: relative;
        }

            .input-box input {
                width: 100%;
                padding: 10px 0;
                font-size: 16px;
                color: #fff;
                margin-bottom: 30px;
                border: none;
                border-bottom: 1px solid #fff;
                outline: none;
                background: transparent;
            }

            .input-box label {
                position: absolute;
                top: 0;
                left: 0;
                padding: 10px 0;
                font-size: 16px;
                color: #fff;
                pointer-events: none;
                transition: 0.5s;
            }

            .input-box input:focus ~ label,
            .input-box input:valid ~ label {
                top: -20px;
                left: 0;
                color: #03e9f4;
                font-size: 12px;
            }

            .input-box input:focus,
            .input-box input:valid {
                border-bottom: 2px solid #03e9f4;
            }

        button {
            width: 100%;
            padding: 10px 0;
            border: none;
            background-color: #03e9f4;
            color: black;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.5s;
        }

            button:hover {
                background-color: #039be5;
            }
    </style>
</head>
<body>

    <div id="particles-js"></div>

    <div class="signup-container">
        <h2>Signup</h2>
        <div class="input-box">
            <input type="text" name="firstname" required="">
            <label>First Name</label>
        </div>
        <div class="input-box">
            <input type="text" name="lastname" required="">
            <label>Last Name</label>
        </div>
        <div class="input-box">
            <input type="email" name="email" required="">
            <label>Email</label>
        </div>
        <div class="input-box">
            <input type="tel" name="phone" required="">
            <label>Phone Number</label>
        </div>
        <div class="input-box">
            <input type="text" name="bankaccount" required="">
            <label>Bank Account</label>
        </div>
        <div class="input-box">
            <input type="password" name="password" required="">
            <label>Password</label>
        </div>
        <div class="input-box">
            <input type="password" name="confirm_password" required="">
            <label>Confirm Password</label>
        </div>
        <button type="submit">Sign Up</button>
    </div>

    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script>
        particlesJS('particles-js',
            {
                "particles": {
                    "number": {
                        "value": 80,
                        "density": {
                            "enable": true,
                            "value_area": 800
                        }
                    },
                    "color": {
                        "value": "#ffffff"
                    },
                    "shape": {
                        "type": "circle",
                        "stroke": {
                            "width": 0,
                            "color": "#000000"
                        },
                        "polygon": {
                            "nb_sides": 5
                        },
                        "image": {
                            "src": "img/github.svg",
                            "width": 100,
                            "height": 100
                        }
                    },
                    "opacity": {
                        "value": 0.5,
                        "random": false,
                        "anim": {
                            "enable": false,
                            "speed": 1,
                            "opacity_min": 0.1,
                            "sync": false
                        }
                    },
                    "size": {
                        "value": 3,
                        "random": true,
                        "anim": {
                            "enable": false,
                            "speed": 40,
                            "size_min": 0.1,
                            "sync": false
                        }
                    },
                    "line_linked": {
                        "enable": true,
                        "distance": 150,
                        "color": "#ffffff",
                        "opacity": 0.4,
                        "width": 1
                    },
                    "move": {
                        "enable": true,
                        "speed": 6,
                        "direction": "none",
                        "random": false,
                        "straight": false,
                        "out_mode": "out",
                        "bounce": false,
                        "attract": {
                            "enable": true,
                            "rotateX": 600,
                            "rotateY": 1200
                        }
                    }
                },
                "interactivity": {
                    "detect_on": "canvas",
                    "events": {
                        "onhover": {
                            "enable": true,
                            "mode": "repulse"
                        },
                        "onclick": {
                            "enable": true,
                            "mode": "push"
                        },
                        "resize": true
                    },
                    "modes": {
                        "grab": {
                            "distance": 400,
                            "line_linked": {
                                "opacity": 1
                            }
                        },
                        "bubble": {
                            "distance": 400,
                            "size": 40,
                            "duration": 2,
                            "opacity": 8,
                            "speed": 3
                        },
                        "repulse": {
                            "distance": 200,
                            "duration": 0.4
                        },
                        "push": {
                            "particles_nb": 4
                        },
                        "remove": {
                            "particles_nb": 2
                        }
                    }
                },
                "retina_detect": true
            }
        );
    </script>

</body>
</html>
