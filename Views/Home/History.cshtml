@{
    ViewData["Title"] = "History";
}

<style>
    /* Center the content on the page */
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        background-color: #f8f9fa; /* Set a light background color */
    }

    /* Style for the table container */
    .table-container {
        width: 100%; /* Adjust the width as needed */
        max-width: 1500px; /* Set a maximum width */
        margin: auto; /* Center the container horizontally */
    }

    /* Improved styling for the table */
    .table-responsive {
        overflow-x: auto;
        margin-bottom: 20px; /* Add some bottom margin for spacing */
    }

    #history-table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 8px; /* Add rounded corners to the table */
        overflow: hidden; /* Hide overflowing content */
    }

    #history-table th, #history-table td {
        padding: 20px; /* Increase padding for better spacing */
        text-align: center; /* Center-align table content */
        border: 1px solid #dee2e6; /* Set border color */
    }

    #history-table th {
        background-color: #343a40; /* Set header background color */
        color: #ffffff; /* Set header text color */
        font-weight: bold;
    }

    #history-table tbody tr:hover {
        background-color: #e9ecef; /* Set hover background color */
    }
</style>

<h1 class="text-center mb-4">History</h1>
<br />
<div class="table-container">
    <div class="table-responsive">
        <table id="history-table" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Operation Type</th>
                    <th>Details</th>
                    <th>Timestamp</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.OperationType</td>
                        <td>@item.Details</td>
                        <td>@item.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

