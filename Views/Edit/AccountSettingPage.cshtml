@model User
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cash Gaurd</title>
    <link rel="stylesheet" href="/css/AccountSettings.css"> <!-- Include your CSS file -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,800" rel="stylesheet">
    <link href="~/css/show.css" rel="stylesheet">
</head>
<body>
    <div class="container" id="container">
        <div class="form-container sign-up-container">
            <form action="/Edit/deleteAccount" enctype="multipart/form-data" method="post">
                <h1>Edit Account info</h1>
                <div class="space" style="margin-bottom: 20px;"></div>
                <div class="space" style="margin-bottom: 20px;"></div>
                <div class="space" style="margin-bottom: 20px;"></div>
                <div class="space" style="margin-bottom: 20px;"></div>
                <div class="profile-pic-container">
                    <input type="file" name="file" id="photoUpload" accept="image/*" onchange="previewPhoto(this)" hidden />
                    <div class="profile-pic" id="photoPreview" style="background-image: url('@Model.photoPath')"></div>
                    <label class="upload-icon"><a href="/Edit/imageSetting" style="font-size: 40px;">+</a></label>

                </div>
                <div class="space"></div><div class="space"></div>
                <pre></pre>
                <div class="input-row">
                    <input type="text" value="@Model.User_Name" required="" readonly />
                    <a href="#" style="visibility: hidden; opacity: 0;">change</a>
                </div>
                <div class="input-row">
                    <input type="text" value="@($"{Model.First_Name} {Model.Last_Name}")" required="" readonly />
                    <a href="/Edit/nameSetting">Change</a>
                </div>
                <div class="input-row">
                    <input type="text" value="@Model.Email" required="" readonly />
                    <a href="/Edit/emailSetting">Change</a>
                </div>
                <div class="input-row">
                    <input type="password" value="@SharedValues.CurUser.Password" required="" readonly />
                    <a href="/Edit/passwordSetting">Change</a>
                </div>
                <input type="hidden" name="file">
                <pre></pre><pre></pre><pre></pre>
                <div class="space" style="margin-bottom: 20px;"></div>
                <div class="space" style="margin-bottom: 20px;"></div>
                <div class="space" style="margin-bottom: 20px;"></div>
                <div class="space" style="margin-bottom: 20px;"></div>
                <button id="delete-link" type="submit">Delete Account</button>
            </form>
        </div>
    </div>

    @section Scripts {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                var deleteLink = document.getElementById("delete-link");
                deleteLink.addEventListener("click", function (event) {
                    event.preventDefault();

                    var confirmed = window.confirm("Are you sure you want to delete your account?");
                    if (confirmed) {
                        // Submit the form
                        event.target.closest('form').submit();
                    }
                });
            });
        </script>
    }
</body>
</html>

