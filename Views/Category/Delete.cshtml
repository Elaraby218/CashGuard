@model ThreeFriends.Models.Category

@{
    ViewBag.Title = "Delete";
}

<style>
    /* Custom CSS for delete confirmation view */
    .confirmation-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
        text-align: center;
    }

    .confirmation-container h3 {
        margin-top: 0;
        margin-bottom: 20px;
        font-size: 24px;
        color: #333;
    }

    .confirmation-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    .confirmation-table th,
    .confirmation-table td {
        border: 1px solid #ccc;
        padding: 10px;
        text-align: center;
    }

    .confirmation-table th {
        background-color: #007bff;
        color: #fff;
    }

    .confirmation-table td {
        background-color: #fff;
    }

    .btn-container {
        text-align: center;
    }

    .btn-container .btn {
        margin: 10px;
        padding: 8px 20px;
        font-size: 16px;
        border-radius: 5px;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
        border: 1px solid #dc3545;
    }

    .btn-danger:hover {
        background-color: #bd2130;
        border-color: #bd2130;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
        border: 1px solid #6c757d;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #545b62;
    }
</style>

<h2>@ViewBag.Title</h2>

<div class="confirmation-container">
    <h3>Are you sure you want to delete this category?</h3>
    <table class="confirmation-table">
        <tr>
            <th>Icon</th>
            <td><img src="~/icons/@Model.Icon" alt="@Model.Name" width="50" height="50" /></td>
        </tr>
        <tr>
            <th>Description</th>
            <td>@Html.DisplayFor(model => model.Description)</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>@Html.DisplayFor(model => model.Name)</td>
        </tr>
    </table>
    <div class="btn-container">
        @using (Html.BeginForm("Delete", "Category", new { id = Model.Id }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <button type="button" onclick="window.location.href='@Url.Action("Index", "Category")'" class="btn btn-secondary">Cancel</button>
            </div>
        }
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var deleteLink = document.getElementById("delete-link");
        deleteLink.addEventListener("click", function (event) {
            event.preventDefault();

            var confirmed = window.confirm("Are you sure you want to delete this category?");
            if (confirmed) {
                // Submit the form
                event.target.closest('form').submit();
            }
        });
    });
</script>